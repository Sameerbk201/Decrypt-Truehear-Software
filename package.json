{
  "name": "decryptionsoftwaretruehear",
  "version": "1.0.4",
  "type": "module",
  "main": "src/index.js",
  "bin": "dist/bundle.cjs",
  "scripts": {
    "build": "node build.js && npm run pkg-all",
    "pkg-all": "npm run pkg-win && npm run pkg-linux && npm run pkg-macos",
    "pkg-win": "pkg dist/bundle.cjs --targets node20-win-x64   --output dist/decrypt-win.exe",
    "pkg-linux": "pkg dist/bundle.cjs --targets node20-linux-x64 --output dist/decrypt-linux",
    "pkg-macos": "pkg dist/bundle.cjs --targets node20-macos-x64 --output dist/decrypt-macos",
    "start": "node src/index.js"
  },
  "keywords": [
    "cli",
    "terminal",
    "decryption",
    "interactive",
    "truehear"
  ],
  "author": "sameerbk201",
  "license": "ISC",
  "description": "A terminal-based decryption software with beautiful UI",
  "dependencies": {
    "chalk": "^5.4.1",
    "crypto-js": "^4.2.0",
    "csv-parse": "^5.6.0",
    "inquirer": "^12.5.0",
    "ora": "^8.2.0",
    "yargs": "^17.7.2"
  },
  "pkg": {
    "scripts": [
      "dist/bundle.cjs"
    ],
    "assets": [
      "src/**/*.json"
    ]
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.5.1",
    "@yao-pkg/pkg-fetch": "^3.5.23",
    "esbuild": "^0.25.5"
  }
}
